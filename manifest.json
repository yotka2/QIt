{
    "manifest_version": 3,
    "name": "QIt",
    "description": "Generate QR codes for selected texts with a right-click",
    "version": "0.1",

    "icons": {
        "128": "images/icon128.png"
    },

    "permissions": [
        "contextMenus",
        "activeTab",
        "scripting"
    ],

    "web_accessible_resources": [{
        "resources": ["qr_list_page.html", "qr_list_page.js"],
        "matches": ["<all_urls>"]
    }],

    "background": {
        "service_worker": "background.js",
        "type": "module"
    }
}